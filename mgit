#!/usr/bin/env python3

import os
import sys

# Add the mgit directory and src subdirectory to Python path
mgit_dir = os.path.dirname(os.path.abspath(__file__))
src_dir = os.path.join(mgit_dir, 'src')
sys.path.insert(0, mgit_dir)
sys.path.insert(0, src_dir)

from main import main

if __name__ == "__main__":
    main()